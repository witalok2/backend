    data () {
    return {
      titulo:     'API - Pagamento',
      subTitulo:  'Meio de Pagamento',
      msg:      'Inserir BotÃ£o de pagamento na plataforma',
      curtidas: 3,

      loading2: false,
      percentagem: 0,
    }
  },

  methods: {
    startComputing (id) {
      this[`loading${id}`] = true
      this[`percentagem${id}`] = 0
      this[`interval${id}`] = setInterval(() => {
        this[`percentagem${id}`] += Math.floor(Math.random() * 8 + 10)
        if (this[`percentagem${id}`] >= 100) {
          clearInterval(this[`interval${id}`])
          this[`loading${id}`] = false
        }
      }, 700)
    }
  },

  beforeDestroy () {
    clearInterval(this.interval1)
    clearInterval(this.interval2)
  }





